<h1>My tasks</h1>
<% @tasks.each do |task| %>
<p>
<%= link_to task.title, task_path(task) %>
<%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Delete #{task.title}?" }, class: "mx-1" do %>
    <i class="fa-solid fa-trash"></i>
    <% end %>
</p>
<% end %>

<%= link_to 'New Task', new_task_path %>
